[Unit]
Description=WoS Translator Service
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/opt/wos-translator
ExecStart=/opt/wos-translator/wos-translator
Restart=on-failure
RestartSec=10

# 安全选项
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/opt/wos-translator/data /opt/wos-translator/logs /opt/wos-translator/config

# 资源限制
LimitNOFILE=65536
MemoryLimit=100M

[Install]
WantedBy=multi-user.target
